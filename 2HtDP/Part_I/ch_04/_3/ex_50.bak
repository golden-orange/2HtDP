; TrafficLight -> TrafficLight
; yields the next state given the current state
(check-expect (traffic-light-next "red") "green")
(define (traffic-light-next s)
  (cond
    [(string=? "green") "yellow"]
    [(string=? "yellow") "red"]
    [(string=? "red") "green"]))
